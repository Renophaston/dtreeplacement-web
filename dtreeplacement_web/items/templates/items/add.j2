{% extends "base.j2" %}
{% block title %}Add item{% endblock %}
{% block content %}
    <form action="{{ url_for('items.add') }}" method="post">
        {% for field in form %}
            {{ field.label() }}
            {{ field() }}
            {%- for error in field.errors %}<span class="error">{{ error }}</span>{%- endfor %}
        {% endfor %}
        <button type="submit">Add item</button>
        <a href="{{ url_for('items.index') }}">Cancel</a>
    </form>
{% endblock content %}
