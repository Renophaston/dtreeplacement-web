{% extends "base.j2" %}
{% block title %}Delete {{ item.content }}{% endblock %}
{% block content %}
    <h2>Delete item {{ item.id }}: "{{ item.content }}"</h2>
    <form action="{{ url_for('items.delete', item_id=item.id) }}" method="post">
        <button type="submit">Delete</button>
        <a href="{{ url_for('items.item_detail', item_id=item.id) }}">Cancel</a>
    </form>
{% endblock content %}
